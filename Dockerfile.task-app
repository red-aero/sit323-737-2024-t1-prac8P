FROM node:18-slim

WORKDIR /app

# Copy package.json and install dependencies
COPY package.json .
RUN npm install

# Copy application code
COPY server.js .
COPY public/ ./public/

# Expose the port the app runs on
EXPOSE 3000

# Define environment variable for GCP
ENV PORT=3000

# Start the application
CMD ["node", "server.js"]
